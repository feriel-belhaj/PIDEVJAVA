<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.workshop.gui.CreationController">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Gestion des Créations" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Nouvelle Création" onAction="#showAddCreationForm" styleClass="action-button"/>
        </HBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.7">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" promptText="Rechercher..." HBox.hgrow="ALWAYS"/>
                    <ComboBox fx:id="categorieFilter" promptText="Catégorie"/>
                    <Button text="Rechercher" onAction="#handleSearchAction" />
                </HBox>
                
                <TableView fx:id="creationsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" />
                        <TableColumn fx:id="titreColumn" text="Titre" />
                        <TableColumn fx:id="categorieColumn" text="Catégorie" />
                        <TableColumn fx:id="dateColumn" text="Date" />
                        <TableColumn fx:id="statutColumn" text="Statut" />
                        <TableColumn fx:id="likesColumn" text="Likes" />
                    </columns>
                </TableView>
                
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Modifier" onAction="#handleEditAction" />
                    <Button text="Supprimer" onAction="#handleDeleteAction" />
                    <Button text="Actualiser" onAction="#refreshTable" />
                </HBox>
            </VBox>
            
            <ScrollPane fitToWidth="true">
                <content>
                    <VBox fx:id="creationDetailsPane" spacing="15">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        
                        <ImageView fx:id="creationImage" fitWidth="300" fitHeight="200" preserveRatio="true">
                            <Image url="@../images/dot-pattern.png" />
                        </ImageView>
                        
                        <Label fx:id="creationTitle" styleClass="details-title" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                        <Label fx:id="creationDate" styleClass="details-date" style="-fx-font-style: italic;"/>
                        
                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="100" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            
                            <Label text="Catégorie:" styleClass="details-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <Label fx:id="categorieLabel" styleClass="details-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                            
                            <Label text="Créateur:" styleClass="details-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <Label fx:id="createurLabel" styleClass="details-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            
                            <Label text="Statut:" styleClass="details-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <Label fx:id="statutLabel" styleClass="details-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            
                            <Label text="Likes:" styleClass="details-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <Label fx:id="likesLabel" styleClass="details-value" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        </GridPane>
                        
                        <Label text="Description:" styleClass="details-label" />
                        <TextArea fx:id="descriptionArea" editable="false" wrapText="true" prefHeight="100" />
                        
                        <Button text="Voir les commentaires" onAction="#showCommentaires" />
                        <Button text="Ajouter un like" onAction="#handleAddLike" />
                    </VBox>
                </content>
            </ScrollPane>
        </SplitPane>
    </center>
</BorderPane>