<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.workshop.gui.ListePartenariatsController">
    <children>
        <!-- En-tête -->
        <HBox alignment="CENTER_LEFT" layoutX="0" layoutY="0" prefHeight="80.0" prefWidth="1200.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets left="30.0" right="30.0"/>
            </padding>
            <children>
                <!-- Logo -->
                <Label text="ArtiZina" style="-fx-font-family: 'Script MT Bold'; -fx-font-size: 24px; -fx-text-fill: #D4A76A;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Menu -->
                <HBox spacing="30.0" alignment="CENTER">
                    <Label text="Accueil" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                    <Label text="Formations" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                    <Label text="Partenariats" style="-fx-font-size: 14px; -fx-text-fill: #D4A76A;"/>
                    <Label text="Événements" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                    <Label text="Produit" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                    <Label text="Contact" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                </HBox>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Bouton Se Connecter -->
                <Button text="Se Connecter" style="-fx-background-color: #D4A76A; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-background-radius: 20;"/>
            </children>
        </HBox>

        <!-- Contenu principal dans ScrollPane -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="80.0">
            <content>
                <VBox spacing="30.0" style="-fx-padding: 40 50 50 50;">
                    <!-- Titre et bouton Ajouter -->
                    <HBox alignment="CENTER" spacing="20.0">
                        <Button fx:id="btnAjouter" text="+ Ajouter" onAction="#ajouterPartenariat" 
                                style="-fx-background-color: #D4A76A; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-background-radius: 20;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="Listes Des Partenariats" style="-fx-font-family: 'Script MT Bold'; -fx-font-size: 32px; -fx-text-fill: #333333;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                    </HBox>

                    <!-- Barre de recherche -->
                    <HBox spacing="10.0" alignment="CENTER_RIGHT">
                        <TextField fx:id="searchField" promptText="Rechercher un partenariat..." prefWidth="300.0"
                                  style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 8 15;"/>
                        <Button fx:id="btnRechercher" text="Rechercher" onAction="#rechercher"
                                style="-fx-background-color: #D4A76A; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-background-radius: 20;"/>
                    </HBox>

                    <!-- Conteneur des cartes -->
                    <FlowPane fx:id="cardsContainer" hgap="20" vgap="20" style="-fx-padding: 10;">
                        <!-- Les cartes seront ajoutées dynamiquement ici -->
                    </FlowPane>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane> 