<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.workshop.gui.ModifierQuantite"
      stylesheets="@./styles/dashboardDesign.css"
      alignment="CENTER" prefWidth="300" prefHeight="200">
    <Label text="Choisir un produit à modifier :"/>
    <ComboBox fx:id="produitCombo"/>
    <Label text="Nouvelle quantité :"/>
    <TextField fx:id="quantiteField"/>
    <Button text="Valider" onAction="#valider" styleClass="search-button"/>
</VBox>
