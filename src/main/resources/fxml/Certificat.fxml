<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.workshop.gui.CertificatController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNom" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtPrenom" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Date d'obtention:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="dateObt" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Niveau:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="comboNiveau" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Nom de l'organisme:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="txtNomOrganisme" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Ajouter" onAction="#handleAjouter"/>
        <Button text="Modifier" onAction="#handleModifier"/>
        <Button text="Supprimer" onAction="#handleSupprimer"/>
        <Button text="👁️ Visualiser Certificat" onAction="#handleVisualiserCertificat"/>
    </HBox>

    <TableView fx:id="tableCertificats" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nomCol" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="prenomCol" text="Prénom" prefWidth="150"/>
            <TableColumn fx:id="niveauCol" text="Niveau" prefWidth="100"/>
            <TableColumn fx:id="nomOrganismeCol" text="Organisme" prefWidth="150"/>
            <TableColumn fx:id="formationTitreCol" text="Formation" prefWidth="200"/>
        </columns>
    </TableView>
</VBox> 