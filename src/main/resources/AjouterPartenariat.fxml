<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.workshop.gui.AjouterPartenariat">
    <children>
        <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <VBox layoutX="50.0" layoutY="30.0" spacing="20.0" style="-fx-background-color: white;">
                    <padding>
                        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
                    </padding>
                    <children>
                        <!-- Titre -->
                        <Label text="Ajouter un Partenariat" style="-fx-font-size: 24px; -fx-font-family: 'Script MT Bold';" alignment="CENTER" textAlignment="CENTER" maxWidth="Infinity">
                            <VBox.margin>
                                <Insets bottom="20.0"/>
                            </VBox.margin>
                        </Label>

                        <!-- Nom -->
                        <VBox spacing="5.0">
                            <Label text="Nom" style="-fx-text-fill: #666666;"/>
                            <TextField fx:id="nom" promptText="Nom du Partenariat" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                            <Label fx:id="errorNom" textFill="RED" visible="false"/>
                        </VBox>

                        <!-- Type -->
                        <VBox spacing="5.0">
                            <Label text="Type" style="-fx-text-fill: #666666;"/>
                            <TextField fx:id="type" promptText="Type de Partenariat" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                            <Label fx:id="errorType" textFill="RED" visible="false"/>
                        </VBox>

                        <!-- Description -->
                        <VBox spacing="5.0">
                            <Label text="Description" style="-fx-text-fill: #666666;"/>
                            <TextArea fx:id="description" prefHeight="100.0" promptText="Description du Partenariat" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;" wrapText="true"/>
                            <Label fx:id="errorDescription" textFill="RED" visible="false"/>
                        </VBox>

                        <!-- Date dÃ©but -->
                        <VBox spacing="5.0">
                            <Label text="Date debut *" style="-fx-text-fill: #666666;"/>
                            <DatePicker fx:id="dateDebut" promptText="Date Debut" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                            <Label fx:id="errorDateDebut" textFill="RED" visible="false"/>
                        </VBox>

                        <!-- Date fin -->
                        <VBox spacing="5.0">
                            <Label text="Date fin *" style="-fx-text-fill: #666666;"/>
                            <DatePicker fx:id="dateFin" promptText="Date fin" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                            <Label fx:id="errorDateFin" textFill="RED" visible="false"/>
                        </VBox>

                        <!-- Statut (ComboBox au lieu de TextField) -->
                        <VBox spacing="5.0">
                            <Label text="Statut *" style="-fx-text-fill: #666666;"/>
                            <ComboBox fx:id="statut" prefWidth="150.0" promptText="Choisir un statut" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                            <Label fx:id="errorStatut" textFill="RED" visible="false"/>
                        </VBox>

                        <!-- Image -->
                        <VBox spacing="5.0">
                            <Label text="Image du Partenariat *" style="-fx-text-fill: #666666;"/>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Button text="Choisir un fichier" onAction="#choisirImage" style="-fx-background-color: #F8F9FA; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                                <Label fx:id="imageLabel" text="Aucun fichier choisi" style="-fx-text-fill: #666666;"/>
                            </HBox>
                            <Label fx:id="errorImage" textFill="RED" visible="false"/>
                        </VBox>

                        <!-- Bouton Ajouter -->
                        <Button fx:id="btnAjouter" onAction="#ajouterPartenariat" text="Ajouter"
                                style="-fx-background-color: #D4A76A; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 20;">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>