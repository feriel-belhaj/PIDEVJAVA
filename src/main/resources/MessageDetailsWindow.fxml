<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.workshop.gui.MessageDetailsController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Button fx:id="backButton" text="Retour" onAction="#closeWindow" style="-fx-background-color: #0078d7; -fx-text-fill: white; -fx-font-family: 'Open Sans'; -fx-font-size: 14px; -fx-padding: 5 10 5 10;" />

    <Label fx:id="nameLabel" style="-fx-font-family: 'Open Sans'; -fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    <Hyperlink fx:id="emailHyperlink" style="-fx-font-family: 'Open Sans'; -fx-font-size: 14px; -fx-text-fill: #005bb5;" />
    <Label fx:id="dateLabel" style="-fx-font-family: 'Open Sans'; -fx-font-size: 14px; -fx-text-fill: #666666;" />

    <Label text="Message :" style="-fx-font-family: 'Open Sans'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding: 10 0 5 0;" />
    <TextArea fx:id="messageArea" editable="false" prefHeight="150" prefWidth="400" wrapText="true" style="-fx-font-family: 'Open Sans'; -fx-font-size: 14px; -fx-background-color: #f5f5f5; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 5;" />
</VBox>