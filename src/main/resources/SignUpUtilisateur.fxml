            <TextField fx:id="User_SignUp_Mail" layoutX="307.0" layoutY="122.0" prefHeight="30.0" prefWidth="220.0" promptText="email" styleClass="textfield" stylesheets="@loginDesign.css" />
            <PasswordField fx:id="User_SignUp_pwd1" layoutX="307.0" layoutY="174.0" prefHeight="30.0" prefWidth="220.0" promptText="Mot de passe" styleClass="textfield" stylesheets="@loginDesign.css" />
            <TextField fx:id="User_SignUp_adresse" layoutX="307.0" layoutY="269.0" prefHeight="30.0" prefWidth="119.0" promptText="Adresse" styleClass="textfield" stylesheets="@loginDesign.css" />
