<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: #F3F4F6;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.workshop.gui.ModifierCandidatureController">
    <children>
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="700.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- En-tête avec croix pour fermer -->
                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                    <Button fx:id="btnFermer" text="✕" onAction="#fermer" style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-text-fill: #777777;"/>
                </HBox>

                <!-- Titre -->
                <Label text="Mise à Jour de la Candidature" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;" alignment="CENTER" maxWidth="Infinity">
                    <VBox.margin>
                        <Insets bottom="30.0"/>
                    </VBox.margin>
                </Label>

                <!-- Formulaire -->
                <VBox spacing="20.0" style="-fx-padding: 0 50;">
                    <!-- Type de Collaboration -->
                    <VBox spacing="5.0">
                        <Label text="Type De Collaboration" style="-fx-text-fill: #555555;"/>
                        <ComboBox fx:id="typeCollabCombo" prefWidth="250.0" promptText="Stage" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;">
                            <!-- Nous ajouterons les items dans le contrôleur -->
                        </ComboBox>
                    </VBox>

                    <!-- Motivation -->
                    <VBox spacing="5.0">
                        <Label text="Motivation" style="-fx-text-fill: #555555;"/>
                        <TextArea fx:id="motivationTextArea" prefHeight="150.0" wrapText="true" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                    </VBox>

                    <!-- Date de postulation -->
                    <VBox spacing="5.0">
                        <Label text="Date postulation" style="-fx-text-fill: #555555;"/>
                        <DatePicker fx:id="datePostulation" style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                    </VBox>

                    <!-- CV -->
                    <VBox spacing="5.0">
                        <Label text="Mettre Votre CV" style="-fx-text-fill: #555555;"/>
                        <HBox spacing="10.0">
                            <Button text="Choisir un fichier" onAction="#choisirCV" style="-fx-background-color: #F8F9FA; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                            <Label fx:id="cvLabel" text="Aucun fichier n'a été sélectionné"/>
                        </HBox>
                        <Button text="Voir le CV actuel" onAction="#voirCV" style="-fx-background-color: transparent; -fx-text-fill: #007bff; -fx-padding: 5 0;"/>
                    </VBox>

                    <!-- Portfolio -->
                    <VBox spacing="5.0">
                        <Label text="Portfolio" style="-fx-text-fill: #555555;"/>
                        <HBox spacing="10.0">
                            <Button text="Choisir un fichier" onAction="#choisirPortfolio" style="-fx-background-color: #F8F9FA; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>
                            <Label fx:id="portfolioLabel" text="Aucun fichier n'a été sélectionné"/>
                        </HBox>
                        <Button text="Voir le Portfolio actuel" onAction="#voirPortfolio" style="-fx-background-color: transparent; -fx-text-fill: #007bff; -fx-padding: 5 0;"/>
                    </VBox>

                    <!-- Bouton Mettre à jour -->
                    <HBox alignment="CENTER">
                        <Button fx:id="btnMettreAJour" text="Mettre à jour" onAction="#mettreAJour" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30; -fx-background-radius: 25;">
                            <HBox.margin>
                                <Insets top="30.0"/>
                            </HBox.margin>
                        </Button>
                    </HBox>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>