                     <children>
                        <ImageView fx:id="User_SignUp_Img" fitHeight="100.0" fitWidth="98.0" layoutX="11.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true" />
                        <Button layoutX="3.0" layoutY="107.0" mnemonicParsing="false" onAction="#addUserInsertImage" prefHeight="25.0" prefWidth="113.0" styleClass="login-btn" text="Importer" />
                     </children>
                  </AnchorPane>
                    </children>
